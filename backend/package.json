{
  "name": "backend",
  "private": true,
  "version": "0.1.0",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "clean": "rimraf ./dist ./node_modules",
    "dev": "concurrently -k \"npm run watch\" \"npm run serve\"",
    "watch": "tsc -w",
    "serve": "nodemon -e js,html,css dist/index.js",
    "forever-start": "forever start --append dist/index.js",
    "forever-stop": "forever stopall",
    "forever-restart": "forever restartall"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "base-x": "^4.0.0",
    "base64-url": "^2.3.3",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "forever": "^4.0.1",
    "nodemon": "^2.0.22",
    "ws": "^8.13.0"
  },
  "devDependencies": {
    "@types/base64-url": "^2.2.0",
    "@types/express": "^4.17.12",
    "@types/node": "^16.0.0",
    "@types/ws": "^8.5.4",
    "concurrently": "^8.0.1",
    "copyfiles": "^2.4.1",
    "rimraf": "^5.0.0",
    "typescript": "^4.3.5"
  }
}
